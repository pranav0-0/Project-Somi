{
    "manifest_version": 3,
    "name": "Project Somi",
    "version": "1.6",
    "description": "Project Somi",
    "author": "TY Comp",
    "action": {
        "default_icon": "/Somi.png",
        "default_popup": "/popup.html",
        "default_title": "a popup window"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "presistant": false
    },
    "permissions": [
        "storage"
    ]
}